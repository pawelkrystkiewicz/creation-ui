{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "paths": {
      "@styles": ["./styles"],
      "@styles/*": ["./styles/*"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@root": ["."],
      "@root/*": ["./*"],
      "@tests": ["./tests"],
      "@tests/*": ["./tests/*"],
      "@ui": ["./ui"],
      "@ui/*": ["./ui/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
      "@hooks": ["./hooks"],
      "@hooks/*": ["./hooks/*"],
      "@assets": ["./assets"],
      "@assets/*": ["./assets/*"],
      "@types": ["./types"],
      "@types/*": ["./types/*"]
    }
  }
}
